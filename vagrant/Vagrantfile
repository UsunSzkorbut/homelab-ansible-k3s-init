Vagrant.configure("2") do |config|
    # Global config
    config.vm.box = "bento/ubuntu-22.04"
    config.vm.provider "vmware_desktop" do |v|
      v.vmx["memsize"] = "4192" 
      v.vmx["numvcpus"] = "2"
    end
  
    # K3s Master
    config.vm.define "k3s-master-01" do |master|
      master.vm.hostname = "k3s-master-01"
      master.vm.provider "vmware_desktop" do |v|
        v.vmx["memsize"] = "4192"
        v.vmx["numvcpus"] = "2"
      end
  
      master.vm.network "public_network", bridge: true, ip: "10.0.0.10", auto_config: true
  
    end
  
    # K3s Workers
    (1..2).each do |i|
      config.vm.define "k3s-worker-0#{i}" do |worker|
        worker.vm.hostname = "k3s-worker-0#{i}"
        worker.vm.provider "vmware_desktop" do |v|
          v.vmx["memsize"] = "4096"
          v.vmx["numvcpus"] = "1"
        end
  
        worker.vm.network "public_network", bridge: true, ip: "10.0.0.2#{i}", auto_config: true
  
      end
    end
  end